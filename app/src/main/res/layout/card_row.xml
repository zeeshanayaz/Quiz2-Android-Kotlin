<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="6dp"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">
            <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginRight="10dp"
                    app:srcCompat="@drawable/android_and_kotlin"
                    android:id="@+id/userImage_Id"
                    android:layout_centerVertical="true"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/user_image"
                    android:layout_alignParentLeft="true"
            />
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:orientation="vertical"
                    android:layout_toRightOf="@id/userImage_Id">

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/userFullName_Id"
                        tools:text="User Name"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimaryText"

                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/userEmail_Id"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        tools:text="zeeshanayaz1@gmail.com"
                        style="@style/user_List_Secondary_Text"/>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/userContactNo_Id"
                            android:layout_marginTop="5dp"
                            tools:text="03122309493"
                            style="@style/user_List_Secondary_Text"
                            android:textStyle="bold"/>
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/userCourse_Id"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="5dp"
                            tools:text="Android"
                            android:textAllCaps="true"
                            style="@style/user_List_Secondary_Text"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:weightSum="8"
                    android:layout_alignParentRight="true">
                <ImageButton
                        android:id="@+id/share_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_share"
                        android:scaleType="center"
                        android:layout_weight="2"
                        android:background="@color/colorWhite"/>
                <ImageButton
                        android:id="@+id/call_dialer_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="center"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_call"
                        android:layout_weight="2"
                        android:background="@color/colorWhite"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>
                <ImageButton
                        android:id="@+id/delete_user_btn"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_delete"
                        android:scaleType="center"
                        android:background="@color/colorWhite"
                        android:layout_weight="1"
                />

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>


